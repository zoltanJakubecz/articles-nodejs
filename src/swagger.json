{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Articles API",
        "description": "Get paginated articles",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "API for articles in the system"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/articles": {
            
            "get": {
                "tags": [
                    "Articles"
                ],
                "requestBody": {
                    "description": "Article Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Paging"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "summary": "Get paginated articles in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/PagingResponse"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Articles"
                ],
                
                "summary": "Create a new article in system",
                "requestBody": {
                    "description": "Article Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/NewArticle"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }    
            }
        }
    },
    "definitions": {
        "Paging": {
            "type": "object",
            "properties": {
                "pageSize": {
                    "type": "integer"
                },
                "page": {
                    "type": "integer"
                }
            }
        },
        "Article": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "NewArticle": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "PagingResponse": {
            "type": "object",
            "properties": {
                "list": {
                    "type": "array",
                    "items": "#/definitions/Article"
                },
                "meta": {
                    "pageSize": {
                        "type": "integer"
                    },
                    "count": {
                        "type": "integer"
                    },
                    "pageCount": {
                        "type": "integer"
                    },
                    "page": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}