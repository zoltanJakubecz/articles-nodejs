{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Articles API",
        "description": "Get paginated articles",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "API for articles in the system"
        },
        {
            "name": "Tokens",
            "description": "Token for access"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/articles": {
            
            "get": {
                "tags": [
                    "Articles"
                ],
                "security": {
                    "cookieAuth": []
                },
                "requestBody": {
                    "description": "Article Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Paging"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "summary": "Get paginated articles in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/PagingResponse"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Articles"
                ],
                
                "summary": "Create a new article in system",
                "requestBody": {
                    "description": "Article Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/NewArticle"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }    
            }
        },
        "/api/articles/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the cat that we want to match",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Articles"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID of the article ",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    },
                    "404": {
                        "description": "Access denied!"
                    }
                }
            }
        },
        "/api/tokens/{platform}": {
            "tags": [
                "Tokens"
            ],
            "parameters": [
                {
                    "name": "platform",
                    "in": "path",
                    "required": true,
                    "description": "Platform of the user",
                    "type": "string"
                }
            ],
            "post": {
                "tags": [
                    "Tokens"
                ],
                "parameters": [
                    {
                        "name": "platform",
                        "in": "path",
                        "required": true,
                        "description": "Platform of the user",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Token"
                        }
                    },
                    "404": {
                        "description": "Unknown platform"
                    }
                }
            }
        },
        "/api/tokens/renew": {
            "put":{
                "tags": [
                    "Tokens"
                ],
                "responses": {
                    "200": {
                        "description": "5 accesses remaining"
                    },
                    "404": {
                        "description": "Token not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "Token": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string" 
                },
                "remaining": {
                    "type": "integer"
                }
            }
        },
        "Paging": {
            "type": "object",
            "properties": {
                "pageSize": {
                    "type": "integer"
                },
                "page": {
                    "type": "integer"
                }
            }
        },
        "Article": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "NewArticle": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "PagingResponse": {
            "type": "object",
            "properties": {
                "list": {
                    "type": "array",
                    "items": "#/definitions/Article"
                },
                "meta": {
                    "pageSize": {
                        "type": "integer"
                    },
                    "count": {
                        "type": "integer"
                    },
                    "pageCount": {
                        "type": "integer"
                    },
                    "page": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}